{
  "private": true,
  "name": "another-one-fucking-boilerplate",
  "version": "0.0.1",
  "description": "Yes, another one",
  "scripts": {
    "clean": "rm -rf build/",
    "lint": "eslint . --debug --ignore-path .gitignore && csscomb -l -v client/",
    "fix": "eslint . --fix --ignore-path .gitignore && csscomb client/",
    "unit": "NODE_PATH=. mocha --compilers js:babel-register --recursive",
    "coverage": "NODE_PATH=. istanbul cover _mocha -- --compilers js:babel-register --recursive",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls",
    "test": "npm-run-all lint unit",
    "ci-test": "npm-run-all lint coveralls",
    "copy-public": "mkdir -p build/ && cp -r client/public/ build/public/",
    "build:server": "webpack --config webpack.server.config.js --progress",
    "build:client": "npm run copy-public && webpack --config webpack.client.config.js --progress",
    "build": "npm-run-all build:client build:server",
    "watch:client": "webpack --config webpack.client.config.js --progress --watch",
    "watch:server": "webpack --config webpack.server.config.js --progress --watch",
    "watch:server-bundle": "nodemon build/server.js",
    "watch": "npm-run-all --parallel watch:client watch:server watch:server-bundle",
    "set-db": "node build/db.js",
    "dev": "npm install && npm-run-all test clean build set-db watch",
    "prod": "npm install && NODE_ENV=production npm-run-all test clean build set-db && pm2 start build/server.js -i 0"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.2.0",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-2": "^6.3.13",
    "babel-register": "^6.5.2",
    "body-parser": "^1.14.2",
    "chai": "^3.5.0",
    "connect-redis": "^3.0.1",
    "coveralls": "^2.11.6",
    "css-loader": "^0.23.1",
    "csscomb": "^3.1.8",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.14.0",
    "expose-loader": "^0.7.1",
    "express": "^4.13.3",
    "express-session": "^1.12.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "form-data": "^1.0.0-rc3",
    "glob": "^6.0.4",
    "hiredis": "^0.4.1",
    "history": "^1.17.0",
    "image-webpack-loader": "^1.6.2",
    "istanbul": "^v1.0.0-alpha",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "mongodb": "^2.1.4",
    "nock": "^7.0.2",
    "node-fetch": "^1.3.3",
    "node-loader": "^0.5.0",
    "node-uuid": "^1.4.7",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.4.0",
    "null-loader": "^0.1.1",
    "postcss-cssnext": "^2.3.0",
    "postcss-loader": "^0.8.0",
    "pre-commit": "^1.1.2",
    "react": "^0.14.5",
    "react-dom": "^0.14.5",
    "react-router": "^1.0.3",
    "sinon": "2.0.0-pre",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.11"
  },
  "pre-commit": "test"
}
